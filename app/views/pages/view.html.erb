<% content_for :head do %>
  <link rel="stylesheet" href="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.css" />
  <%# <script src="https://uicdn.toast.com/calendar/latest/toastui-calendar.min.js"></script> %>
  <style>
    .calendar-container {
      margin-top: 30px;
      margin-bottom: 50px;
    }
    
    .calendar-legend {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 15px;
      gap: 10px;
    }
    
    .legend-item {
      display: flex;
      align-items: center;
      margin-right: 15px;
    }
    
    .legend-color {
      width: 15px;
      height: 15px;
      margin-right: 5px;
      border-radius: 3px;
    }
    
    .calendar-controls {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }
    
    .view-buttons {
      display: flex;
      gap: 10px;
    }
    
    .view-button {
      padding: 5px 10px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .view-button.active {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }
    
    .date-navigation {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .nav-button {
      padding: 5px 10px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .current-date-range {
      font-weight: bold;
    }
    
    .raw-data-toggle {
      margin-top: 20px;
      margin-bottom: 10px;
    }
    
    .raw-data {
      display: none;
      padding: 15px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 4px;
      margin-bottom: 20px;
    }
    
    .raw-data.visible {
      display: block;
    }
  </style>
<% end %>

<% content_for :title, "view" %>



<% @pages.each do |pg| %>
  <h2><%= pg.date %></h2>
  <% if pg.analyzed_content.present? %>
    <% CSV.parse(pg.analyzed_content).each do |l| %>
      <p><%= l.join(", ") %></p>
    <% end %>
  <% else %>
    <p>分析データがありません</p>
  <% end %>
  <hr>
<% end %>

<style>
  .hday {
    width: 100%;
    height: 1.5rem;
    background-color: #f0f0f0;
    position: relative;
  }

  .hday-slot {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: red;
  }
</style>

<div class="hday">
  <div class="hday-slot" style="left: calc(100% * 3.5/24); width: calc(100% * 0.5/24);" ></div> <!-- 30min from 3:30 -->
</div>

<div class="calendar-container" data-controller="calendar" data-calendar-pages-value='<%= @pages.map { |pg| CSV.parse(pg.analyzed_content) }.to_json.html_safe %>' style="height: 600px">
  <div class="calendar-legend">
    <div class="legend-item">
      <div class="legend-color" style="background-color: #4285F4;"></div>
      <span>事務</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #0F9D58;"></div>
      <span>研究</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #9C27B0;"></div>
      <span>趣味</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #9E9E9E;"></div>
      <span>だらだら</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #FF9800;"></div>
      <span>娯楽</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #009688;"></div>
      <span>生活</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background-color: #DB4437;"></div>
      <span>仕事</span>
    </div>
  </div>
  
  <div class="calendar-controls">
    <div class="view-buttons">
      <button class="view-button" data-calendar-target="viewButton" data-view="day" data-action="click->calendar#changeView">日</button>
      <button class="view-button" data-calendar-target="viewButton" data-view="week" data-action="click->calendar#changeView">週</button>
    </div>
    
    <div class="date-navigation">
      <button class="nav-button" data-action="click->calendar#prev">前へ</button>
      <span class="current-date-range" data-calendar-target="currentDateRange"></span>
      <button class="nav-button" data-action="click->calendar#next">次へ</button>
      <button class="nav-button" data-action="click->calendar#today">今日</button>
    </div>
  </div>
  
  <div id="calendar" data-calendar-target="calendar" style="height: 80vh;">
  </div>
 
  <div class="raw-data-toggle">
    <button data-action="click->calendar#toggleRawData" data-calendar-target="toggleRawData">元データを表示/非表示</button>
  </div>
  
  <div class="raw-data" data-calendar-target="rawData">
    <% @pages.each do |pg| %>
      <h2><%= pg.date %></h2>
      <% if pg.analyzed_content.present? %>
        <% CSV.parse(pg.analyzed_content).each do |l| %>
          <p><%= l.join(", ") %></p>
        <% end %>
      <% else %>
        <p>分析データがありません</p>
      <% end %>
      <hr>
    <% end %>
  </div>

</div>