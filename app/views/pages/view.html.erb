<% content_for :head do %>
  <style>
    .calendar-container {
      margin-top: 30px;
      margin-bottom: 50px;
    }
    
    .calendar-legend {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 15px;
      gap: 10px;
    }
    
    .legend-item {
      display: flex;
      align-items: center;
      margin-right: 15px;
    }
    
    .legend-color {
      width: 15px;
      height: 15px;
      margin-right: 5px;
      border-radius: 3px;
    }
    
    .calendar-controls {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }
    
    .view-buttons {
      display: flex;
      gap: 10px;
    }
    
    .view-button {
      padding: 5px 10px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .view-button.active {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }
    
    .date-navigation {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .nav-button {
      padding: 5px 10px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .current-date-range {
      font-weight: bold;
    }
    
    .raw-data-toggle {
      margin-top: 20px;
      margin-bottom: 10px;
    }
    
    .raw-data {
      display: none;
      padding: 15px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 4px;
      margin-bottom: 20px;
    }
    
    .raw-data.visible {
      display: block;
    }
  </style>
<% end %>

<% content_for :title, "view" %>



<style>
  .hday-line {
    display: flex;
    margin-bottom: 10px;
  }

  .hday {
    width: 100%;
    height: 1.5rem;
    background-color: #f0f0f0;
    position: relative;
  }

  .hday-slot {
    position: absolute;
    top: 0;
    height: 100%;
    border-right: 2px solid #fff;    
    box-sizing: border-box;
  }
  
  .date-header {
    font-weight: bold;
    width: 3em;
    height: 1.5rem;
    line-height: 1.5rem;
  }
  
  .activity-details {
    margin-top: 15px;
    margin-bottom: 15px;
  }

  .hday-hour {
    height: 0.3rem;
    background-color: #aaa;
    margin-top: 20px;
  }

  .hday-slot-hour::after {
    content: attr(data-hour);
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.7rem;
  }

</style>

<div class="hday-line">
  <div class="date-header"></div>
  <div class="hday hday-hour">
    <% 0.upto(23) do |h| %>
      <div class="hday-slot hday-slot-hour" 
           style="left: calc(100% * <%= h %> / 24); 
                  width: 1px;
                  background-color: black;"
            data-hour="<%= h %>"></div>
    <% end %>
  </div>
</div>

<% activities_by_date(@pages).each do |date, v| %>
  <div class="hday-line">
    <div class="date-header">
      <a href="/day/<%= date.to_date.strftime("%Y%m%d") %>">
        <%= date.to_date.strftime("%m/%d") %>
      </a>
    </div>
    <div class="hday">
      <% v.each do |line| %>
        <% position = calculate_hday_slot_position(line, date) %>
        <% next unless position %>
    
        <div class="hday-slot" 
             style="left: calc(100% * <%= position[:left_pos] %>); 
                    width: calc(100% * <%= position[:width] %>);
                    background-color: <%= @categories[position[:category]] %>;" 
             title="<%= position[:title] %>"></div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="calendar-container" data-controller="calendar" data-calendar-pages-value='<%= @pages.map { |pg| CSV.parse(pg.analyzed_content) }.to_json.html_safe %>' style="height: 600px">

  <div class="calendar-legend">
    <% @categories.each do |name, color| %>
      <div class="legend-item">
      <div class="legend-color" style="background-color: <%= color %>;"></div>
      <span><%= name %></span>
      </div>
    <% end %>
  </div>
  
  <div class="calendar-controls">
    <div class="view-buttons">
      <button class="view-button" data-calendar-target="viewButton" data-view="day" data-action="click->calendar#changeView">日</button>
      <button class="view-button" data-calendar-target="viewButton" data-view="week" data-action="click->calendar#changeView">週</button>
    </div>
    
    <div class="date-navigation">
      <button class="nav-button" data-action="click->calendar#prev">前へ</button>
      <span class="current-date-range" data-calendar-target="currentDateRange"></span>
      <button class="nav-button" data-action="click->calendar#next">次へ</button>
      <button class="nav-button" data-action="click->calendar#today">今日</button>
    </div>
  </div>
  
  <div id="calendar" data-calendar-target="calendar" style="height: 80vh;">
  </div>
 
  <div class="raw-data-toggle">
    <button data-action="click->calendar#toggleRawData" data-calendar-target="toggleRawData">元データを表示/非表示</button>
  </div>
  
  <div class="raw-data" data-calendar-target="rawData">
    <% @pages.each do |pg| %>
      <h2><%= pg.date %></h2>
      <% if pg.analyzed_content.present? %>
        <% CSV.parse(pg.analyzed_content).each do |l| %>
          <p><%= l.join(", ") %></p>
        <% end %>
      <% else %>
        <p>分析データがありません</p>
      <% end %>
      <hr>
    <% end %>
  </div>

</div>
