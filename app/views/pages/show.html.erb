<style>
  #editor {
    width: 100%;
  }

  #editor-text {
    width: 100%;
    background-color: white;
    font-size: 1.1rem;
    margin: 0;
  }

  #dailynav {
    text-align: center;
  }

  #dailynav h1 {
    display: inline;
    margin: 0;
  }
</style>

<nav id="dailynav">
  <% if @yesterday_page %>
    <a href="/pages/<%= @yesterday_page.id %>">◀</a>
  <% else %>
    <a href="/pages/new?date=<%= @yesterday %>">◀</a>
  <% end %>
  <h1>
    <%= @page.date %>
  </h1>
  <% if @tomorrow_page %>
    <a href="/pages/<%= @tomorrow_page.id %>">▶</a>
  <% else %>
    <a href="/pages/new?date=<%= @tomorrow %>">▶</a>
  <% end %>
</nav>

<div id="container">
  <div id="editor">
    <%= form_with model: @page do |form| %>
      <nav>
        <%= form.hidden_field :date, value: @page.date %>
        <%= form.submit %>
      </nav>
      <div id="editor-text">
        <%= form.rich_text_area :content, value: @page.content %>
      </div>

    <% end %>

  </div>

  <div id="analyzed">
    <h2>Analysis</h2>
    <form action="/pages/<%= @page.id %>/analyze" method="post">
      <input type='submit' value='analyze'>
    </form>
    <pre><%= @page.analyzed_content %></pre>
  </div>
</div>